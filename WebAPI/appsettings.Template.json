//Tạo file appsettings.json từ file mẫu appsettings.Template.json và điền các thông tin cần thiết như sau:
{
	//Danh sách các máy chủ (hosts) được phép truy cập ứng dụng
	//Ví dụ: abc.online;www.abc.online;admin.abc.online;www.admin.abc.online
	//Thêm cả tên miền API và tên miền client. Nếu bị lỗi thì dùng dấu * vào
	"AllowedHosts": "",
	//Chuỗi kết nối cơ sở dữ liệu
	"ConnectionStrings": {
		"StringConnection": ""
	},
	//Cấu hình OpenTelemetry URL để gửi dữ liệu giám sát dự án khi chạy
	"OpenTelemetry": {
		"OtlpEndpoint": "http://localhost:4317"
	},
	//Mức độ ghi log
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.EntityFrameworkCore.Database.Command": "Warning",
			"Microsoft.AspNetCore": "Warning",
			"Microsoft.AspNetCore.Watch.BrowserRefresh": "Warning",
			"Microsoft.AspNetCore.Watch.BrowserRefresh.BlazorWasmHotReloadMiddleware": "Warning",
			"LuckyPennySoftware.MediatR.License": "None"
		}
	},
	//Danh mục sản phẩm được bảo vệ không xoá
	"ProtectedProductCategory": [ "Xe máy", "Phụ kiện", "Phụ tùng" ],
	//Cài đặt liên quan đến Token JWT
	"Jwt": {
		"Key": "", //JWT Key Bắt buộc dài hơn 32 kí tự
		"Issuer": "", //Địa chỉ API
		"Audience": "", //Địa chỉ nơi đến (client)
		"AccessTokenExpiryInMinutes": 5, //Thời gian hết hạn token (phút). Hết hạn thì bắt buộc phải lấy lại AccessToken từ RefreshToken.
		"RefreshTokenExpiryInDays": 7 //Thời gian hết hạn RefreshToken (ngày). Hết hạn thì bắt buộc phải đăng nhập lại.
	},
	"ProtectedAuthorizationEntities": {
		"SuperRoles": [ "" ], //Roles đặc biệt không được phép xoá và full quyền
		"ProtectedUsers": [ "example@example.com:Admin@123456" ], //Format: "email:password" hoặc "email" (mật khẩu mặc định: DefaultProtectedUser@123456). Người dùng được bảo vệ không xoá
		"DefaultRolesForNewUsers": [ "" ] //Roles mặc định cho người dùng mới. Cũng không được phép xoá.
	},
	"SeedingOptions": {
		"RunDataSeedingOnStartup": false //Bật chế độ Seeding dữ liệu khi khởi động ứng dụng
	}
}
