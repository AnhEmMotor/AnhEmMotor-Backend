//Tạo file appsettings.Devlopment.json từ file mẫu appsettings.Template.json và điền các thông tin cần thiết như sau:
{
  //Danh sách các máy chủ (hosts) được phép truy cập ứng dụng
  //Ví dụ: abc.online;www.abc.online;admin.abc.online;www.admin.abc.online
  //Nếu đang lập trình thì nên gõ là dấu *
  "AllowedHosts": "",
  //Chuỗi kết nối cơ sở dữ liệu
  "ConnectionStrings": {
    "StringConnection": ""
  },
  //Cấu hình OpenTelemetry URL để gửi dữ liệu giám sát dự án khi chạy
  "OpenTelemetry": {
    "OtlpEndpoint": "http://localhost:4317"
  },
  //Thông tin ghi log Serliog
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Watch.BrowserRefresh": "Warning",
      "Microsoft.AspNetCore.Watch.BrowserRefresh.BlazorWasmHotReloadMiddleware": "Warning",
      "LuckyPennySoftware.MediatR.License": "None"
    }
  },
  "Jwt": {
    "Key": "", //JWT Key Bắt buộc dài hơn 32 kí tự
    "Issuer": "", //Địa chỉ API
    "Audience": "" //Địa chỉ nơi đến (client)
  },
  //Người dùng được bảo vệ không xoá và roles đặc biệt không được phép xoá và full quyền
  "ProtectedAuthorizationEntities": {
    "SuperRoles": [ "" ],
    "ProtectedUsers": [ "" ]
  }
}
