//Tạo file appsettings.Devlopment.json từ file mẫu appsettings.Template.json và điền các thông tin cần thiết như sau:
{
	//Danh sách các máy chủ (hosts) được phép truy cập ứng dụng
	//Ví dụ: abc.online;www.abc.online;admin.abc.online;www.admin.abc.online
	//Nếu đang lập trình thì nên gõ là dấu *
	"AllowedHosts": "",
	//Chuỗi kết nối cơ sở dữ liệu
	"ConnectionStrings": {
		"StringConnection": ""
	},
	//Cấu hình OpenTelemetry URL để gửi dữ liệu giám sát dự án khi chạy
	"OpenTelemetry": {
		"OtlpEndpoint": "http://localhost:4317"
	},
	//Thông tin ghi log Serliog
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.EntityFrameworkCore.Database.Command": "Warning",
			"Microsoft.AspNetCore": "Warning",
			"Microsoft.AspNetCore.Watch.BrowserRefresh": "Warning",
			"Microsoft.AspNetCore.Watch.BrowserRefresh.BlazorWasmHotReloadMiddleware": "Warning",
			"LuckyPennySoftware.MediatR.License": "None"
		}
	},
	//Cài đặt liên quan đến Token JWT
	"Jwt": {
		"Key": "", //JWT Key Bắt buộc dài hơn 32 kí tự
		"Issuer": "", //Địa chỉ API
		"Audience": "", //Địa chỉ nơi đến (client)
		"AccessTokenExpiryInMinutes": 540, //Thời gian hết hạn token (phút). Hết hạn thì bắt buộc phải lấy lại AccessToken từ RefreshToken.
		"RefreshTokenExpiryInDays": 90 //Thời gian hết hạn RefreshToken (ngày) nếu không lấy lại Access Token từ Refresh Token. Hết hạn thì bắt buộc phải đăng nhập lại.
	},
	//Người dùng được bảo vệ không xoá và roles đặc biệt không được phép xoá và full quyền
	"ProtectedAuthorizationEntities": {
		"SuperRoles": [ "" ], //Roles đặc biệt không được phép xoá và full quyền
		"ProtectedUsers": [ "example@example.com:Admin@123456" ], //Format: "email:password" hoặc "email" (mật khẩu mặc định: DefaultProtectedUser@123456). Người dùng được bảo vệ không xoá
		"DefaultRolesForNewUsers": [ "" ] //Roles mặc định được gán ngẫu nhiên cho người dùng mới
	},
	"SeedingOptions": {
		"RunDataSeedingOnStartup": false //Bật chế độ Seeding dữ liệu khi khởi động ứng dụng
	}
}
