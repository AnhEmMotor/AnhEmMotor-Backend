//Tạo file appsettings.Devlopment.json từ file mẫu appsettings.Template.json và điền các thông tin cần thiết như sau:
{
  //Danh sách các máy chủ (hosts) được phép truy cập ứng dụng
  //Ví dụ: abc.online;www.abc.online;admin.abc.online;www.admin.abc.online
  "AllowedHosts": "",
  //Chuỗi kết nối cơ sở dữ liệu
  "ConnectionStrings": {
    "StringConnection": ""
  },
  //Thông tin ghi log Serliog
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  },
  "Jwt": {
    "Key": "", //JWT Key Bắt buộc dài hơn 32 kí tự
    "Issuer": "", //Địa chỉ API
    "Audience": "" //Địa chỉ nơi đến (client)
  },
  //Người dùng được bảo vệ không xoá và roles đặc biệt không được phép xoá và full quyền
  "ProtectedAuthorizationEntities": {
    "SuperRoles": [ "" ],
    "ProtectedUsers": [ "" ]
  }
}
